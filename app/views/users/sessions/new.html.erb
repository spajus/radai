<div class="container">
  <div class="row">
    <div class="span12">
      <h2>Prisijungimas</h2>
    </div>
    <div class="span6">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal well"}) do |f| %>

        <p>
          <%= devise_error_messages! %>
        </p>

        <div class="control-group">
          <%= f.label :email, class: "control-label" %>
          <div class="controls">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :password, class: "control-label" %>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="control-group">
            <label class="control-label"></label>
            <div class="controls">
              <label class="checkbox">
                Prisiminti <%= f.check_box :remember_me %>
              </label>
            </div>
          </div>
        <% end -%>

        <div class="form-actions">
          <%= f.submit "Prisijungti", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
    <div class="span6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
