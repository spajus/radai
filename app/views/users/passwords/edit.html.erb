<div class="container">
  <div class="row">
    <div class="span6">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-horizontal well"}) do |f| %>

        <% unless devise_error_messages!.blank? %>
          <div class="alert alert-error">
            <%= devise_error_messages! %>
          </div>
        <% end %>

        <legend><%= title "Slaptažodžio keitimas" %></legend>

        <%= f.hidden_field :reset_password_token %>

        <div class="control-group">
          <%= f.label "Naujas slaptažodis", class: "control-label" %>
          <div class="controls">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label "Pakartokite naują slaptažodį", class: "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Pakeisti slaptažodį", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="span6">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>


