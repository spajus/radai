<div class="container">
  <div class="row">
    <div class="span6">

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-horizontal well" }) do |f| %>

        <% unless devise_error_messages!.blank? %>
          <div class="alert alert-error">
            <%= devise_error_messages! %>
          </div>
        <% end %>

        <legend>Slaptažodžio atstatymas</legend>

        <div class="control-group">
          <%= f.label :email, class: "control-label" %>
          <div class="controls">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Išsiųsti slaptažodžio atstatymo instrukcijas", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="span6">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>


