<% if flash %>
  <div class="container">
    <div class="row">
      <div class="span12">
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if flash[:error] %>
          <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= flash[:alert] %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>