  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: "brand" do %>
        <%= image_tag 'shared/radai-logo.png', width: 32, height: 32, alt: 'Radai' %> Radai Statybos
      <% end %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <%= menu_item "home" do%>
            <%= link_to root_path do %>
              <i class="icon-home"></i> Pradžia
            <% end %>
          <% end %>
          <%= menu_item "search" do %>
            <%=  link_to search_path do %>
              <i class="icon-search"></i>Paieška</a>
            <% end %>
          <% end %>
          <%= menu_item "specialist" do %>
            <% unless current_user %>
                <%= link_to new_specialist_path do %>
                  <i class="icon-plus"></i> Specialisto registracija
                <% end %>
            <% else %>
                <%= link_to edit_specialist_path do %>
                  <i class="icon-user"></i> Specialisto profilis
                <% end %>
            <% end %>
          <% end %>
          <%= menu_item "feedback" do %>
            <%=  link_to feedback_leave_path do %>
              <i class="icon-bullhorn"></i>Palikti atsiliepimą</a>
            <% end %>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <% if current_user %>
            <%= menu_item "devise::registrations", "dropdown" do %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <i class="icon-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <i class="icon-edit"></i> Prisijungimo nustatymai
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="icon-signout"></i> Atsijungti
                  <% end %>
                </li>
              </ul>
            <% end %>
          <% else %>
            <%= menu_item "devise::sessions" do %>
              <%= link_to new_user_session_path do %>
                <i class="icon-signin"></i> Prisijungti
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>